emulator:
  # kind is informational; ADB is used for all emulators.
  # Supported values: waydroid | memu | generic
  kind: waydroid
  # For Waydroid default:
  # adb_serial: "127.0.0.1:5555"
  # For remote MEmu on LAN (example):
  # adb_serial: "192.168.1.50:21503"  # adjust IP/port to your MEmu instance
  adb_serial: "127.0.0.1:5555"
  package_name: "com.YoStarEN.AzurLane"

display:
  target_fps: 2
  orientation: "landscape"
  force_resolution: null

performance:
  hash_size: 16
  similarity_threshold: 0.95
  active_fps: 2.0
  idle_fps: 0.5
  transition_time: 5.0

capture:
  frame_rate: 2.0  # Maximum FPS

hashing:
  algorithm: "dhash"
  hamming_threshold: 3
  stability_frames: 2
  regional_zones:
    - name: "dialog"
      bounds: [0.2, 0.2, 0.8, 0.8]
    - name: "navigation"
      bounds: [0.0, 0.85, 1.0, 1.0]

llm:
  provider: "gemini"
  model: "gemini-1.5-flash-latest"
  endpoint: "https://generativelanguage.googleapis.com/v1beta"
  api_key_env: "GEMINI_API_KEY"
  max_tokens: 2048
  temperature: 0.1

resolver:
  ocr: "paddle"
  thresholds:
    ocr_text: 0.75
    ncc_edge: 0.60
    ncc_gray: 0.70
    orb_inliers: 12
    combo_accept: 0.65
    # Weights for combining method confidences
    weights:
      ocr: 1.0
      template: 1.0
      orb: 0.9
      region_hint: 0.5
      llm_arbitration: 1.2
  regions:
    top_bar: [0.00, 0.00, 1.00, 0.12]
    bottom_bar: [0.00, 0.85, 1.00, 0.15]
    left_panel: [0.00, 0.12, 0.20, 0.73]
    center: [0.20, 0.12, 0.60, 0.73]
    right_panel: [0.80, 0.12, 0.20, 0.73]

data:
  base_dir: "~/.azlbot"
  # Dataset capture for offline testing and calibration
  capture_dataset:
    enabled: false  # Toggle on to capture frames during normal operation
    sample_rate_hz: 0.5  # Capture at most 0.5 images per second
    max_dim: 1280  # Resize images to fit within this dimension
    format: "jpg"  # "jpg" or "png"
    jpeg_quality: 85  # Quality for JPEG compression (1-100)
    dedupe:
      method: "dhash"  # Deduplication method (currently only dhash)
      hamming_threshold: 3  # Max Hamming distance for duplicates
    retention:
      max_files: 2000  # Maximum number of captured files to keep
      max_days: 60  # Maximum age of files in days
    metadata: true  # Save JSON metadata with timestamps, hashes, and context

logging:
  level: "INFO"
  keep_frames: true
  overlay_draw: true

ui:
  show_llm_json: false
  zoom_overlay: true